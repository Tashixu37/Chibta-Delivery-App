<link
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
  rel="stylesheet"
/>
<link rel="stylesheet" href="/styles/main.css" />

<div
  class="d-flex flex-column min-vh-100 justify-content-center align-items-center"
  style="background: var(--background)"
>
  <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4">
    <div class="text-center mb-4">
      <span class="fw-bold" style="color: var(--primary-dark); font-size: 2rem"
        >Chibta</span
      >
    </div>
    <div class="card shadow-sm p-4 rounded-4">
      <h2 class="mb-4 text-center" style="color: var(--primary-dark)">
        Sign Up
      </h2>
      <% if (typeof error !== "undefined") { %>
      <div class="alert alert-danger textÆ’-center"><%= error %></div>
      <% } %>

      <form action="/signup" method="POST" class="mb-3">
        <div class="mb-3">
          <!-- username -> name -->
          <label for="name" class="form-label">Full Name:</label>
          <input type="text" name="name" class="form-control" required />
        </div>
        <!-- additional fields -->
        <div class="mb-3">
          <label for="email" class="form-label">Email:</label>
          <input type="text" name="email" class="form-control" required />
        </div>

        <!-- phone number, ** Make it better -->
        <div class="mb-3">
          <label for="phone" class="form-label">Phone Number:</label>
          <input type="text" name="phone" class="form-control" required />
        </div>

        <div class="mb-3">
          <label for="role" class="form-label">Role:</label>
          <select name="role" class="form-control" required>
            <option value="">-- Select Role --</option>
            <option value="customer">Customer</option>
            <option value="vendor">Vendor</option>
            <option value="admin">Admin</option>
            <option value="rider">Rider</option>
          </select>
        </div>

        <!-- additional fields -->
        <div class="mb-3">
          <label for="password" class="form-label">Password:</label>
          <input
            type="password"
            name="password"
            class="form-control"
            required
          />
        </div>
        <button type="submit" class="btn btn-primary w-100">Sign Up</button>
      </form>
      <p class="text-center">
        Already have an account? <a href="/login">Login here</a>
      </p>
    </div>
  </div>
</div>
<%- include('partials/footer') %>
