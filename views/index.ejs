<%- include('partials/header', { title: 'Welcome to Chibta App' }) %>

<!-- Promotions Carousel -->
<div class="mb-4">
    <div id="promoCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner rounded-4">
            <div class="carousel-item active">
                <img src="/images/promo1.webp" class="d-block w-100" alt="Promo 1" style="height: 220px; object-fit: cover;">
                <div class="carousel-caption d-none d-md-block text-start" style="left: 2rem; bottom: 2rem;">
                    <h4 class="fw-bold">20% off on your first purchase</h4>
                    <p>Use code <span class="fw-bold">FRESH20</span> at checkout!</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="/images/promo2.jpg" class="d-block w-100" alt="Promo 2" style="height: 220px; object-fit: cover;">
                <div class="carousel-caption d-none d-md-block text-start" style="left: 2rem; bottom: 2rem;">
                    <h4 class="fw-bold">Buy 1 Get 1 Free</h4>
                    <p>On selected fruits and vegetables!</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="/images/promo3.jpg" class="d-block w-100" alt="Promo 3" style="height: 220px; object-fit: cover;">
                <div class="carousel-caption d-none d-md-block text-start" style="left: 2rem; bottom: 2rem;">
                    <h4 class="fw-bold">Free Delivery</h4>
                    <p>On orders above Nu.1000!</p>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#promoCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#promoCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>
</div>

<!-- Product Categories (Centered Horizontal Scroll) -->
<div class="mb-5">
    <div class="d-flex justify-content-center overflow-auto gap-3 pb-2">
        <div class="text-center">
            <div class="category-btn bg-white rounded-circle shadow-sm mb-1 p-2" style="width:72px;height:72px;">
                <img src="/images/veg.png" alt="Vegetables" style="width:60px;height:60px;object-fit:contain;">
            </div>
            <small>Vegetables</small>
        </div>
        <div class="text-center">
            <div class="category-btn bg-white rounded-circle shadow-sm mb-1 p-2" style="width:72px;height:72px;">
                <img src="/images/fruit.png" alt="Fruits" style="width:60px;height:60px;object-fit:contain;">
            </div>
            <small>Fruits</small>
        </div>
        <div class="text-center">
            <div class="category-btn bg-white rounded-circle shadow-sm mb-1 p-2" style="width:72px;height:72px;">
                <i class="bi bi-cup-straw" style="font-size:2.2rem;color:var(--primary-dark);"></i>
            </div>
            <small>Beverages</small>
        </div>
        <div class="text-center">
            <div class="category-btn bg-white rounded-circle shadow-sm mb-1 p-2" style="width:72px;height:72px;">
                <i class="bi bi-basket" style="font-size:2.2rem;color:var(--primary-dark);"></i>
            </div>
            <small>Grocery</small>
        </div>
        <div class="text-center">
            <div class="category-btn bg-white rounded-circle shadow-sm mb-1 p-2" style="width:72px;height:72px;">
                <i class="bi bi-cup-hot" style="font-size:2.2rem;color:var(--primary-dark);"></i>
            </div>
            <small>Edible Oil</small>
        </div>
    </div>
</div>


<!-- Featured Products -->
<div class="text-center mb-5">
    <h1 class="mb-3" style="color: var(--primary-dark);">Welcome to ChhibTa</h1>
    <p class="lead" style="color: var(--text);">Fresh groceries delivered to your door in 30 minutes!</p>
</div>
<div class="row g-4">
    <div class="col-12 col-sm-6 col-md-4 col-lg-3">
        <div class="card h-100 shadow-sm">
            <img src="/images/apple.jpg" class="card-img-top" alt="Fresh Apples">
            <div class="card-body">
                <h5 class="card-title">Fresh Apples</h5>
                <p class="card-text">Crisp and juicy apples, perfect for snacking.</p>
                <button class="btn btn-primary w-100">Add to Cart</button>
            </div>
        </div>
    </div>
    <div class="col-12 col-sm-6 col-md-4 col-lg-3">
        <div class="card h-100 shadow-sm">
            <img src="/images/banana.jpg" class="card-img-top" alt="Bananas">
            <div class="card-body">
                <h5 class="card-title">Bananas</h5>
                <p class="card-text">Sweet bananas, great for breakfast or smoothies.</p>
                <button class="btn btn-primary w-100">Add to Cart</button>
            </div>
        </div>
    </div>
    <div class="col-12 col-sm-6 col-md-4 col-lg-3">
        <div class="card h-100 shadow-sm">
            <img src="/images/carrot.jpg" class="card-img-top" alt="Bananas">
            <div class="card-body">
                <h5 class="card-title">Carrots</h5>
                <p class="card-text">Crunchy Carrots, great for improving eyesight</p>
                <button class="btn btn-primary w-100">Add to Cart</button>
            </div>
        </div>
    </div>
    <div class="col-12 col-sm-6 col-md-4 col-lg-3">
        <div class="card h-100 shadow-sm">
            <img src="/images/brocoli.jpg" class="card-img-top" alt="Bananas">
            <div class="card-body">
                <h5 class="card-title">Broccolis</h5>
                <p class="card-text">Munchy Broccolis, perfect to ruin your childhood</p>
                <button class="btn btn-primary w-100">Add to Cart</button>
            </div>
        </div>
    </div>
    <!-- Add more product cards as needed -->
</div>
<%- include('partials/footer') %>